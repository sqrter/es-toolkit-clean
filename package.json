{
  "name": "es-toolkit-clean",
  "version": "1.0.0",
  "description": "Minimal starter repository for a publishable Typescript library",
  "repository": {
    "type": "git",
    "url": "git@github.com:sqrter/es-toolkit-clean.git"
  },
  "author": "Serhii Siryk <serg.siryk@scalified.com>",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    "types": "./dist/esm/index.d.ts",
    "require": "./dist/cjs/index.js",
    "import": "./dist/esm/index.js",
    "default": "./dist/esm/index.js"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "commit": "cz",
    "dev:bundle-analysis": "echo 'Bundle analysis included in build output'",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest",
    "test:coverage": "NODE_ENV=test vitest run --coverage",
    "build": "pnpm clean && node esbuild.config.mjs",
    "typecheck": "tsc --noEmit -p tsconfig.build.json",
    "publish-lib": "pnpm run build && pnpm publish",
    "publish-beta": "pnpm run build && pnpm publish --tag beta",
    "publish-dryrun": "pnpm run build && pnpm publish --dry-run",
    "clean": "rimraf dist",
    "reset": "pnpm clean && git clean -xdf node_modules",
    "update-all-dependencies": "pnpm dlx npm-check-updates -u",
    "lint": "eslint .",
    "format": "pnpm run lint --fix",
    "prepare": "is-ci || husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/compat": "^1.2.6",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@size-limit/preset-big-lib": "^11.1.6",
    "@types/node": "^22.13.1",
    "@vitest/coverage-v8": "3.2.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "devmoji": "^2.3.0",
    "esbuild": "^0.25.5",
    "eslint": "^9",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "glob": "^11.0.2",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.1.0",
    "open": "^10.1.0",
    "prettier": "^3.5.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.2",
    "size-limit": "^11.1.6",
    "tslib": "^2.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  },
  "size-limit": [
    {
      "name": "ESM Entry Point",
      "path": "dist/esm/index.js"
    },
    {
      "name": "CJS Entry Point",
      "path": "dist/cjs/index.js"
    }
  ],
  "packageManager": "pnpm@10.3.0",
  "peerDependencies": {
    "es-toolkit": "^1.38.0"
  }
}
